<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:padding = "7dp">

    <LinearLayout
        android:id = "@+id/reasonForVisitTxtView"
        style = "@style/RoundCornerEditTextBox"
        android:layout_width = "match_parent"
        android:layout_height = "50dp"
        android:background = "@drawable/round_background_white"
        android:orientation = "vertical">

        <Spinner
            android:id = "@+id/reasonSpinner"
            style = "@style/RoundCornerEditTextBox"
            android:layout_width = "match_parent"
            android:layout_height = "50dp"
            android:entries = "@array/reason_for_visit"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id = "@+id/commentLayout"
        style = "@style/RoundCornerEditTextBox"
        android:layout_width = "match_parent"
        android:layout_height = "120dp"
        android:layout_below = "@+id/reasonForVisitTxtView"
        android:layout_marginTop = "10dp"
        android:hint = "@string/login_comment">

        <EditText
            android:id = "@+id/commentEditText"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            style = "@style/CommentTextInputLayout" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id = "@+id/pictureLayout"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/commentLayout"
        android:layout_marginTop = "10dp"
        android:orientation = "horizontal">

        <ImageView
            android:id = "@+id/cameraImageView"
            android:layout_width = "120dp"
            android:layout_height = "120dp"
            android:layout_gravity = "center"
            android:background = "@drawable/round_background_white"
            android:padding = "2dp"
            android:scaleType = "fitXY"/>

        <Button
            android:id = "@+id/takePictureBtn"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginLeft = "5dp"
            android:background = "@drawable/round_button"
            android:backgroundTint = "@color/colorPrimary"
            android:text = "@string/take_picture_btn"
            android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
            android:textColor = "@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/signLayout"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/pictureLayout"
        android:layout_marginTop = "10dp"
        android:orientation = "horizontal">

        <ImageView
            android:id = "@+id/signImageView"
            android:layout_width = "120dp"
            android:layout_height = "120dp"
            android:layout_gravity = "center"
            android:background = "@drawable/round_background_white"
            android:padding = "2dp"
            android:scaleType = "fitXY"/>

        <Button
            android:id = "@+id/takeSignBtn"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginLeft = "5dp"
            android:background = "@drawable/round_button"
            android:backgroundTint = "@color/colorPrimary"
            android:text = "@string/signature_btn_text"
            android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
            android:textColor = "@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/btnGroup"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/signLayout"
        android:layout_marginTop = "5dp"
        android:orientation = "horizontal">

        <Button
            android:id = "@+id/cancelBtn"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "2dp"
            android:layout_weight = "1"
            android:background = "@drawable/round_button"
            android:text = "@string/cancel"
            android:textColor = "@android:color/white"/>

        <Button
            android:id = "@+id/saveBtn"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "2dp"
            android:layout_weight = "1"
            android:background = "@drawable/round_button"
            android:backgroundTint = "@color/colorPrimaryGreen"
            android:text = "@string/save"
            android:textColor = "@android:color/white"/>

    </LinearLayout>

</RelativeLayout>