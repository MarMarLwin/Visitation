<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id = "@+id/todo_msg_card_view"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:foreground = "?android:attr/selectableItemBackground"
    app:cardCornerRadius = "5dp"
    app:cardElevation = "2dp"
    app:cardUseCompatPadding = "true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">

        <ImageView
            android:id = "@+id/statusColor"
            android:layout_width = "5dp"
            android:layout_height = "0dp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/constraintLayout"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "5dp"
            android:padding = "10dp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent">

            <TextView
                android:id = "@+id/assignDateTimeTextView"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "8dp"
                android:layout_marginTop = "3dp"
                android:gravity = "center|start"
                android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
                android:textSize = "14sp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toEndOf = "@+id/assignByTimeImageView"
                app:layout_constraintTop_toTopOf = "@+id/assignByTimeImageView"/>

            <TextView
                android:id = "@+id/assignByTextView"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "8dp"
                android:layout_marginTop = "3dp"
                android:layout_marginEnd = "16dp"
                android:ellipsize = "end"
                android:gravity = "center|start"
                android:maxLines = "1"
                android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
                android:textSize = "14sp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toStartOf = "@+id/statusImageView"
                app:layout_constraintStart_toEndOf = "@+id/assignByImageView"
                app:layout_constraintTop_toTopOf = "@+id/assignByImageView"/>

            <TextView
                android:id = "@+id/toDoMessageTextView"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:ellipsize = "end"
                android:gravity = "center|start"
                android:maxLines = "1"
                android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
                android:textColor = "@color/colorPrimaryDark"
                android:textSize = "16sp"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"/>

            <TextView
                android:id = "@+id/statusTextView"
                android:layout_width = "0dp"
                android:layout_height = "27dp"
                android:layout_marginStart = "8dp"
                android:layout_marginTop = "3dp"
                android:gravity = "center|start"
                android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
                android:textSize = "14sp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toEndOf = "@+id/statusImageView"
                app:layout_constraintTop_toTopOf = "@+id/statusImageView"/>

            <ImageView
                android:id = "@+id/statusImageView"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:layout_marginEnd = "70dp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/toDoMessageTextView"
                app:srcCompat = "@drawable/ic_done_all_24dp"/>

            <ImageView
                android:id = "@+id/assignByTimeImageView"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/toDoMessageTextView"
                app:srcCompat = "@drawable/ic_assign_time_24dp"/>

            <ImageView
                android:id = "@+id/assignByImageView"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "16dp"
                android:layout_marginTop = "8dp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintStart_toEndOf = "@+id/assignDateTimeTextView"
                app:layout_constraintTop_toBottomOf = "@+id/toDoMessageTextView"
                app:srcCompat = "@drawable/ic_assign_person_24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
