<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:padding = "10dp">

    <ScrollView
        android:id = "@+id/scrollView2"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerNameTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerNameEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:drawableStart = "@drawable/ic_assign_person_24dp"
                    android:drawablePadding = "@dimen/med_dimen"
                    android:hint = "@string/customer_name"
                    android:singleLine = "true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerContactNameTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:drawableStart = "@drawable/ic_customer"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerNameTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerContactNameEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:drawableStart = "@drawable/ic_contact_person"
                    android:drawablePadding = "@dimen/med_dimen"
                    android:hint = "@string/customer_contact_name"
                    android:singleLine = "true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerPhoneTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:hint = "@string/customer_phone"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerContactNameTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerPhoneEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:drawableStart = "@drawable/ic_customer_phone"
                    android:drawablePadding = "@dimen/med_dimen"
                    android:inputType = "numberSigned"
                    android:singleLine = "true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerEmailTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:hint = "@string/customer_email"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerPhoneTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerEmailEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:drawableStart = "@drawable/ic_email"
                    android:drawablePadding = "@dimen/med_dimen"
                    android:inputType = "textEmailAddress"
                    android:singleLine = "true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerWebsiteTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:hint = "@string/customer_website"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerEmailTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerWebsiteEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:drawableStart = "@drawable/ic_website_address"
                    android:drawablePadding = "1dp"
                    android:inputType = "textEmailAddress"
                    android:singleLine = "true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id = "@+id/customerAddressTextInputLayout"
                style = "@style/RoundCornerEditTextBox"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:hint = "@string/customer_address"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerWebsiteTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id = "@+id/customerAddressEditText"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:gravity = "start"
                    android:lines = "2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <fragment
                android:id = "@+id/customerLocationMapView"
                android:name = "com.google.android.gms.maps.SupportMapFragment"
                android:layout_width = "match_parent"
                android:layout_height = "250dp"
                android:layout_marginTop = "8dp"
                app:layout_constraintBottom_toTopOf = "@+id/createCustomerNextButton"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerAddressTextInputLayout"/>

            <Button
                android:id = "@+id/createCustomerNextButton"
                style = "@style/RoundCornerButtonBlue"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "8dp"
                android:text = "@string/next"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toBottomOf = "@+id/customerLocationMapView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>